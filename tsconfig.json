{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "resolveJsonModule": true,

  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
